<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment">




    <ScrollView
        android:id="@+id/appScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/appScrollViewLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView android:text="My Nanodegree Apps!" android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="normal"
            android:textSize="26dp"
            android:textAlignment="center"
            android:id="@+id/headerView" />

        <Button style="@style/buttonStyle"
            android:text="SPOTIFY MANAGER"
            android:id="@+id/spotifyButton"
            android:layout_below="@+id/headerView" />

        <Button style="@style/buttonStyle"
            android:text="SCORES APP"
            android:id="@+id/scoreButton"
            android:layout_below="@+id/spotifyButton" />

        <Button style="@style/buttonStyle"
            android:text="LIBRARY APP"
            android:id="@+id/librayButton"
            android:layout_below="@+id/scoreButton" />

        <Button style="@style/buttonStyle"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buildItBiggerButton"
            android:layout_below="@+id/librayButton" />

        <Button style="@style/buttonStyle"
            android:text="XYZ READER"
            android:id="@+id/xyzReaderButton"
            android:layout_below="@+id/buildItBiggerButton" />

        <Button style="@style/buttonStyle"
            android:text="CAPSTONE: MY OWN APP "
            android:id="@+id/capstonMyOwnAppButton"
            android:layout_below="@+id/xyzReaderButton"
            android:background="@string/capstoneButton_color" />

    </RelativeLayout >

</ScrollView>

</RelativeLayout>
